<h1>Products#new</h1>
<p>Find me in app/views/products/new.html.erb</p>
<h1>PRODUCT新規作成</h1>
<%= form_with model: @product do |f| %>
<p>全て必須です</p>
<%= render 'layouts/errors', model: @product %>
<table>
  <tr>
    <th><%= f.label :name, "名前" %></th>
    <td><%= f.text_field :name %></td>
  </tr>

  <tr>
    <th><%= f.label :amount, "金額" %></th>
    <td><%= f.number_field :amount %></td>
  </tr>

  <tr>
    <th><%= f.label :address, "住所" %></th>
    <td><%= f.text_field :address %></td>
  </tr>

  <tr>
    <th><%= f.label :image, "画像" %></th>
    <td><%= f.file_field :image %></td>
  </tr>
</table>
<div>
  <ul>
    <li><%= f.submit "登録完了する"%></li>
    <li><%= link_to "PRODUCT情報一覧に戻る", :products %></li>
  </ul>
</div>
<% end %>
